<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Engineers and Inspectors" %></title>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>

    <!-- Materialize Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag :styles %>
  </head>

  <body>
    <%= partial "views/header" %>
    <div class="row">
      <div class="nav col s12 m2">
        <%= partial "views/nav" %>
      </div>
      <div class="content col s12 m8">
        <%= yield %>
      </div>
      <div class="contact col s12 m2">
        <%= partial "views/contact" %>
      </div>
    </div>
    <%= partial "views/footer" %>

    <%= javascript_include_tag :all %>
  </body>
</html>
